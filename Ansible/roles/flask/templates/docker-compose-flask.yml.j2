version: "3"
services:
  web:
  # replace username/repo:tag with your name and image details
    image: "{{image}}"
    deploy:
      replicas: "{{replicas}}"
      resources:
        limits:
          cpus: "0.1"
          memory: 50M
      restart_policy:
        condition: on-failure
    ports:
      - "{{port}}:80"
    networks:
      - webnet
networks:
  webnet:
